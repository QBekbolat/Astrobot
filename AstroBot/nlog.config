<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      internalLogFile="internal-nlog.txt">

  <variable name="Layout"
            value="${longdate} | ${pad:padding=5:fixedlength=true:inner=${level:uppercase=true}} | ${pad:padding=25:alignmentOnTruncation=left:fixedlength=true:inner=${logger}} | ${message}"/>

  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file -->
    <target xsi:type="File"
            name="allfile"
            fileName="Log-${shortdate}.log"
            layout="${Layout}" />

    <target name="c" xsi:type="ColoredConsole" useDefaultRowHighlightingRules="false" layout="${Layout}">
      <highlight-word foregroundColor="Red" ignoreCase="true" text="| Error |" wholeWords="false" />
      <highlight-word foregroundColor="DarkYellow" ignoreCase="true" text="|  WARN |" wholeWords="false" />
      <!-- repeated -->
    </target>
    
    <!-- write to the void aka just remove -->
    <target xsi:type="Null" name="blackhole" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="*" minlevel="Trace" writeTo="allfile,c" />

    <!--Skip Microsoft logs and so log only own logs-->
    <!--<logger name="Microsoft.*" minlevel="Trace" writeTo="blackhole" final="true" />-->
  </rules>
</nlog>